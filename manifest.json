{
  "manifest_version": 3,
  "name": "Fake News Detection for Chrome",
  "version": "1.0",
  "description": "Let's verify your news for accuracy using AI!",
  "action": {
    "default_popup": "popup2.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://router.huggingface.co/*",
    "http://127.0.0.1:3000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "dashboard.html", "dashboard.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}